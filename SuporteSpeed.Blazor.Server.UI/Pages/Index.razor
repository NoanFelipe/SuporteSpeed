@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Suporte Speed - Início</PageTitle>

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 80vh;">

    <div class="my-5">
        <img src="images/logo-suportespeed.jpg" alt="Logo Suporte Speed" class="img-fluid" style="max-width: 400px; height: auto;" />
    </div>

    <AuthorizeView>
        <Authorized>
            @{
                var user = context.User.Identity?.Name ?? "Usuário";
            }
            <h1 class="text-center mb-4">Olá, @user!</h1>
            <p class="lead text-center mb-4">Selecione uma opção para continuar:</p>

            <div class="d-flex gap-3">
                <a href="/tickets" class="btn btn-primary btn-lg">
                    <span class="oi oi-list" aria-hidden="true"></span> Meus Chamados
                </a>

                <a href="/ai-review" class="btn btn-success btn-lg">
                    <span class="oi oi-lightbulb" aria-hidden="true"></span> Revisão da IA
                </a>
            </div>
        </Authorized>
        <NotAuthorized>
            <h1 class="text-center mb-4">Bem-vindo(a) ao Suporte Speed!</h1>
            <p class="lead text-center mb-4">Faça login para acessar os recursos da plataforma.</p>
            <a href="users/login" class="btn btn-primary btn-lg">Fazer Login</a>
        </NotAuthorized>
    </AuthorizeView>
</div>